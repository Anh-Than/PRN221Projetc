@page
@model StoreManagement.Pages.Roles.RoleListModel
@{
}
<h1>Roles Manager</h1>
<div class="container">
    <form method="get">
        <h4>Create Role</h4>
        <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Name" class="form-control" placeholder="Enter Role's name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (IdentityRole ir in Model.roles)
            {
                <tr>
                    <td>@ir.Id</td>
                    <td>@ir.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>