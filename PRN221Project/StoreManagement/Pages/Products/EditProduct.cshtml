@page "{id:int}"
@using StoreManagement.DataAcces;
@model StoreManagement.Pages.Products.EditProductModel
@{
}

<div class="container">
    <h1>Edit a Product</h1>
    <form method="post">
        <div class="form-group">
            <input type="hidden" asp-for="EditProductView.ProductId" name="productId" />
            <label>Product Name</label>
            <input type="text" class="form-control" asp-for="EditProductView.ProductName" name="productName" placeholder="Enter product name">
        </div>
        <div class="form-group">
            <label>Category</label>
            <select class="form-select mb-4 mt-2" asp-for="EditProductView.CategoryId" name="categoryId" aria-label="Category">
                <option value="0">--Not selected--</option>
                @foreach (Category c in Model.Categories)
                {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Supplier</label>
            <select class="form-select mb-4 mt-2" asp-for="EditProductView.SupplierId" name="supplierId" aria-label="Category">
                <option value="0">--Not selected--</option>
                @foreach (Supplier s in Model.Suppliers)
                {
                    <option value="@s.SupplierId">@s.CompanyName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="number" asp-for="EditProductView.UnitPrice" name="unitPrice" />
        </div>
        <div class="form-group">
            <label>Units In Stock</label>
            <input type="numer" asp-for="EditProductView.UnitsInStock" name="unitsInStock" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>