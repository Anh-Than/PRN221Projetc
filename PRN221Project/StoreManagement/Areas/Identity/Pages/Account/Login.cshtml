@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section css{
    <link href="~/css/login.css" rel="stylesheet" />
}
<body>
    <div class="slider">
        <div class="load">
        </div>
        <div class="content">
            <div class="principal">
                <div class="container">
                    <div class="row">
                        <div class="col-4">
                        </div>
                        <div class="col-4" style="margin-top: 10%">
                            <section>
                                <div class="login-content">
                                    <form id="account" method="post">
                                        <h2 style="text-align:center; color:#fff">Login</h2>
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-floating" style="margin:5px;">
                                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                            <label asp-for="Input.Email" class="form-label"></label>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating" style="margin:5px;">
                                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                            <label asp-for="Input.Password" class="form-label"></label>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div>
                                            <button id="login-submit" style="margin:5px;" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                                        </div>
                                        <div>
                                            <p>
                                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                            </p>
                                        </div>
                                    </form>
                                </div>
                            </section>
                        </div>
                        <div class="col-4">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
