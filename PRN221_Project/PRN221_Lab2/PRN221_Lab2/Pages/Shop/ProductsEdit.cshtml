@page
@model PRN221_Lab2.Pages.Shop.ProductsEditModel
@{
}
<h1>Edit</h1>

<form method="post" class="mt-3">
    <input hidden asp-for="Product.ProductId" />

    <div class="form-group row">
        <label asp-for="Product.ProductName" class="col-sm-2 col-form-label">Product Name</label>
        <div class="col-sm-10">
            <input asp-for="Product.ProductName" class="form-control" placeholder="Name"/>
        </div>
        <label asp-for="Product.UnitsInStock" class="col-sm-2 col-form-label">Unit in Stock</label>
        <div class="col-sm-10">
            <input asp-for="Product.UnitsInStock" class="form-control" placeholder="UnitsInStock" />
        </div>
        <label asp-for="Product.UnitPrice" class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10">
            <input asp-for="Product.UnitPrice" class="form-control" placeholder="Price" />
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-page="/Shop/ProductsList" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </div>
</form>